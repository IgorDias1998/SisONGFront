@model List<SisONGFront.Dtos.DoacaoReadDto>

@{
    ViewData["Title"] = "Histórico de Doações";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="display-6"><i class="bi bi-clock-history me-2"></i>Histórico de Doações</h2>
        <p class="text-muted">Veja aqui suas doações anteriores registradas no sistema.</p>
    </div>

    <div class="card shadow p-4">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>Você ainda não realizou nenhuma doação.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Tipo</th>
                            <th>Valor</th>
                            <th>Item</th>
                            <th>Quantidade</th>
                            <th>Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doacao in Model)
                        {
                            <tr>
                                <td>@doacao.Tipo</td>
                                <td>@(doacao.Valor?.ToString("C") ?? "-")</td>
                                <td>@doacao.Item ?? "-"</td>
                                <td>@(doacao.Quantidade?.ToString() ?? "-")</td>
                                <td>@doacao.Data?.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
