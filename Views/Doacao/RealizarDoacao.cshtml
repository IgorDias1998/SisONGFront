@model SisONGFront.Dtos.DoacaoCreateDto

@{
    ViewData["Title"] = "Realizar Doação";
}

<h2>Realizar Doação</h2>

<form asp-action="RealizarDoacao" method="post">
    <div class="form-group">
        <label asp-for="Tipo">Tipo de Doação</label>
        <select asp-for="Tipo" class="form-control" id="tipoSelect">
            <option value="">Selecione...</option>
            <option value="Financeira">Financeira</option>
            <option value="Insumo">Insumo</option>
        </select>
    </div>

    <div class="form-group" id="valorGroup" style="display:none;">
        <label asp-for="Valor">Valor (R$)</label>
        <input asp-for="Valor" class="form-control" />
    </div>

    <div class="form-group" id="itemGroup" style="display:none;">
        <label asp-for="Item">Item</label>
        <input asp-for="Item" class="form-control" />
    </div>

    <div class="form-group" id="quantidadeGroup" style="display:none;">
        <label asp-for="Quantidade">Quantidade</label>
        <input asp-for="Quantidade" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Data">Data</label>
        <input asp-for="Data" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar Doação</button>
</form>

@section Scripts {
    <script>
        document.getElementById("tipoSelect").addEventListener("change", function () {
            const tipo = this.value;
            document.getElementById("valorGroup").style.display = tipo === "Financeira" ? "block" : "none";
            document.getElementById("itemGroup").style.display = tipo === "Insumo" ? "block" : "none";
            document.getElementById("quantidadeGroup").style.display = tipo === "Insumo" ? "block" : "none";
        });
    </script>
}
