@model SisONGFront.Dtos.LoginDto

@{
    ViewData["Title"] = "Entrar no SisONG";
}

<style>
    body {
        background: #f1f5f9;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 5% auto;
        padding: 2rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

    .login-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-header h2 {
            font-weight: 700;
            color: #0d6efd;
        }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-primary {
        border-radius: 0.5rem;
        font-weight: 600;
    }

    .register-hint {
        font-size: 0.9rem;
        text-align: center;
        margin-top: 1rem;
    }
</style>

<div class="login-container">
    <div class="login-header">
        <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
        <h2>Bem-vindo ao SisONG</h2>
        <p class="text-muted">Acesse sua conta para continuar</p>
    </div>

    @{
        var errosGerais = ViewData.ModelState[string.Empty]?.Errors;
        if (errosGerais != null && errosGerais.Count > 0)
        {
            <div class="alert alert-danger">
                @foreach (var erro in errosGerais)
                {
                    <p class="mb-0">@erro.ErrorMessage</p>
                }
            </div>
        }
    }

    <form asp-action="Index" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                <input asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
            </div>
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Senha" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" />
            </div>
            <span asp-validation-for="Senha" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
        </button>
    </form>

    <div class="register-hint">
        <p class="text-muted mt-3">Ainda não tem uma conta?</p>
        <a href="/Voluntario/CadastrarVoluntario" class="btn btn-outline-primary btn-sm">Cadastrar como voluntário</a>
        <a href="/Doador/CadastrarDoador" class="btn btn-outline-dark btn-sm mt-3 m-1">Cadastrar como Doador</a>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
