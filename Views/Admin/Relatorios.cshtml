@model List<SisONGFront.Dtos.RelatorioReadDto>

@{
    ViewData["Title"] = "Relatórios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="display-6">
            <i class="bi bi-clipboard-check-fill">Relatórios</i>
        </h2>
        <a asp-action="CadastrarRelatorio" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Gerar Novo Relatório
        </a>
    </div>


    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tipo</th>
                <th>Data de Geração</th>
                <th>Conteúdo</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var relatorio in Model)
            {
                <tr>
                    <td>@relatorio.Tipo</td>
                    <td>@relatorio.DataGeracao.ToString("dd/MM/yyyy")</td>
                    <td>@relatorio.Conteudo</td>
                    <td>
                        <a asp-action="VisualizarRelatorio" asp-route-id="@relatorio.Id" class="btn btn-outline-dark" target="_blank">
                            Visualizar PDF
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
