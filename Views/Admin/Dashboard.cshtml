@{
    ViewData["Title"] = "Dashboard - Administração";
}

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Voluntários</h5>
                <h2>@ViewBag.VoluntariosCount</h2>
                <p class="card-text">Cadastrados no sistema.</p>
                <a class="btn btn-light" asp-controller="Admin" asp-action="Voluntarios">Ver detalhes</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Doadores</h5>
                <h2>@ViewBag.DoadoresCount</h2>
                <p class="card-text">Cadastrados no sistema.</p>
                <a class="btn btn-light" asp-controller="Admin" asp-action="Doadores">Ver detalhes</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-dark mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Eventos</h5>
                <h2>@ViewBag.EventosCount</h2>
                <i class="bi bi-calendar-event-fill"></i>
                <p class="card-text">Gerencie os eventos cadastrados.</p>
                <a class="btn btn-dark" asp-controller="Admin" asp-action="Eventos">Ver detalhes</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Produtos</h5>
                <h2>@ViewBag.ProdutosCount</h2>
                <p class="card-text">Itens de consumo mensal cadastrados.</p>
                <a class="btn btn-light" asp-controller="Admin" asp-action="Produtos">Ver detalhes</a>
            </div>
        </div>
    </div>
</div>
