@{
    ViewData["Title"] = "Dashboard - Administração";
}

<div class="text-center mb-4">
    <h2 class="display-6">
        <i class="bi bi-speedometer2 m-1"></i>Dashboard
    </h2>
    <p class="text-muted">Navegue nas opções abaixo.</p>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4">
    <div class="col">
        <div class="card bg-primary text-white shadow-sm h-100 d-flex flex-column">
            <div class="card-body flex-grow-1 d-flex flex-column justify-content-between">
                <div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-people-fill fs-2 me-2"></i>
                        <h5 class="card-title mb-0">Voluntários</h5>
                    </div>
                    <h2>@ViewBag.VoluntariosCount</h2>
                    <p class="card-text">Cadastrados no sistema.</p>
                </div>
                <a class="btn btn-light mt-3" asp-controller="Admin" asp-action="Voluntarios">Ver detalhes</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-success text-white shadow-sm h-100 d-flex flex-column">
            <div class="card-body flex-grow-1 d-flex flex-column justify-content-between">
                <div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-heart-fill fs-2 me-2"></i>
                        <h5 class="card-title mb-0">Doadores</h5>
                    </div>
                    <h2>@ViewBag.DoadoresCount</h2>
                    <p class="card-text">Cadastrados no sistema.</p>
                </div>
                <a class="btn btn-light mt-3" asp-controller="Admin" asp-action="Doadores">Ver detalhes</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-warning text-dark shadow-sm h-100 d-flex flex-column">
            <div class="card-body flex-grow-1 d-flex flex-column justify-content-between">
                <div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-calendar-event-fill fs-2 me-2"></i>
                        <h5 class="card-title mb-0">Eventos</h5>
                    </div>
                    <h2>@ViewBag.EventosCount</h2>
                    <p class="card-text">Gerencie os eventos cadastrados.</p>
                </div>
                <a class="btn btn-dark mt-3" asp-controller="Admin" asp-action="Eventos">Ver detalhes</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-info text-white shadow-sm h-100 d-flex flex-column">
            <div class="card-body flex-grow-1 d-flex flex-column justify-content-between">
                <div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-box-seam fs-2 me-2"></i>
                        <h5 class="card-title mb-0">Produtos</h5>
                    </div>
                    <h2>@ViewBag.ProdutosCount</h2>
                    <p class="card-text">Itens de consumo mensal cadastrados.</p>
                </div>
                <a class="btn btn-light mt-3" asp-controller="Admin" asp-action="Produtos">Ver detalhes</a>
            </div>
        </div>
    </div>
</div>
