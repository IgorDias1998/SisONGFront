@model IEnumerable<SisONGFront.Dtos.VoluntarioReadDto>

@{
    ViewData["Title"] = "Voluntários - Administração";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="display-6">
            <i class="bi bi-people-fill me-2"></i>Lista de Voluntários
        </h2>
        <p class="text-muted">Confira os voluntários cadastrados e suas informações.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-center text-muted">Nenhum voluntário cadastrado no momento.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Habilidades</th>
                                <th>Disponibilidade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var voluntario in Model)
                            {
                                <tr>
                                    <td>@voluntario.Nome</td>
                                    <td>@voluntario.Email</td>
                                    <td>@voluntario.Telefone</td>
                                    <td>@voluntario.Habilidades</td>
                                    <td>@voluntario.Disponibilidade</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
