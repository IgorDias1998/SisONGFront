@model IEnumerable<SisONGFront.Dtos.VoluntarioReadDto>

@{
    ViewData["Title"] = "Voluntários - Administração";
}

<h2 class="mb-4">Lista de Voluntários</h2>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Habilidades</th>
            <th>Disponibilidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voluntario in Model)
        {
            <tr>
                <td>@voluntario.Nome</td>
                <td>@voluntario.Email</td>
                <td>@voluntario.Telefone</td>
                <td>@voluntario.Habilidades</td>
                <td>@voluntario.Disponibilidade</td>
            </tr>
        }
    </tbody>
</table>
