@model IEnumerable<SisONGFront.Dtos.DoadorReadDto>

@{
    ViewData["Title"] = "Doadores - Administração";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="display-6">
            <i class="bi bi-person-heart me-2"></i>Lista de Doadores
        </h2>
        <p class="text-muted">Abaixo estão os doadores cadastrados no sistema.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-center text-muted">Nenhum doador cadastrado no momento.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doador in Model)
                            {
                                <tr>
                                    <td>@doador.Nome</td>
                                    <td>@doador.Email</td>
                                    <td>@doador.Telefone</td>
                                    <td>@doador.Tipo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
