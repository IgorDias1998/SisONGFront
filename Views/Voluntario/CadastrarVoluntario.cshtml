@model SisONGFront.Dtos.VoluntarioCreateDto

@{
    ViewData["Title"] = "Cadastro de Voluntário";
}

<h2>Cadastro de Voluntário</h2>

<form asp-action="CadastrarVoluntario" asp-controller="Voluntario" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" type="password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Habilidades"></label>
        <input asp-for="Habilidades" class="form-control" />
        <span asp-validation-for="Habilidades" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Disponibilidade"></label>
        <input asp-for="Disponibilidade" class="form-control" />
        <span asp-validation-for="Disponibilidade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HistoricoParticipacao"></label>
        <textarea asp-for="HistoricoParticipacao" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
