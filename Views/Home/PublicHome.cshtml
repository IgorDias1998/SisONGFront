@{
    ViewData["Title"] = "Bem-vindo ao SisONG";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Bem-vindo ao SisONG!</h1>
        <p class="lead">Conectando voluntários e doadores com organizações que fazem a diferença.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 text-center mb-3">
            <div class="card shadow p-3">
                <h4 class="mb-3">Quero ser Voluntário</h4>
                <a asp-controller="Voluntario" asp-action="CadastrarVoluntario" class="btn btn-primary btn-block">Cadastrar como Voluntário</a>
            </div>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="card shadow p-3">
                <h4 class="mb-3">Quero ser Doador</h4>
                <a asp-controller="Doador" asp-action="Create" class="btn btn-success btn-block">Cadastrar como Doador</a>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <p>Já possui uma conta?</p>
        <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary">Entrar</a>
    </div>
</div>
