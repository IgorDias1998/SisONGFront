@{
    ViewData["Title"] = "Home Page";
}

@model SisONGFront.Dtos.UsuarioDto

<h3>Bem-vindo, @Model?.Nome</h3>
<p>Perfil: @Model?.Perfil</p>

@if (Model?.Perfil == "Voluntario")
{
    <p>Habilidades: @Model?.Habilidades</p>
    <p>Disponibilidade: @Model?.Disponibilidade</p>
    <p>Histórico: @Model?.HistoricoParticipacao</p>
}
else if (Model?.Perfil == "Doador")
{
    <p>E-mail: @Model?.Email</p>

    <a class="btn btn-success" asp-controller="Doacao" asp-action="RealizarDoacao">Fazer Doação</a>
    <a class="btn btn-success" asp-controller="Doacao" asp-action="Historico">Histórico de Doações</a>
}
else
@if (User.IsInRole("Administrador"))
{
   <a class="btn btn-success" asp-controller="Admin" asp-action="Dashboard">Acessar Área Administrativa</a>   
}


