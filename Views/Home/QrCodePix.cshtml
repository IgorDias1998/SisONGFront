@{
    ViewData["Title"] = "Pagamento via Pix";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2 style="color: blue"><i class="bi bi-heart-fill"></i> SisONG</h2>
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h2 class="mb-3">Doação via Pix</h2>
                    <p class="text-muted">Use o QR Code abaixo para realizar sua doação.</p>

                    <img src="data:image/png;base64,@ViewBag.QRCode"
                         alt="QR Code Pix"
                         class="img-fluid rounded mb-3"
                         style="max-width: 250px;" />

                    <h5 class="mt-3">
                        Valor:
                        <span class="badge bg-success fs-5">
                            R$ @ViewBag.Valor.ToString("N2")
                        </span>
                    </h5>

                    <p class="mt-4 text-muted small">
                        Após o pagamento, sua contribuição será registrada automaticamente.
                        Obrigado pela sua ajuda 💚
                    </p>

                    <a href="@Url.Action("PaginaAnonima", "Home")" class="btn btn-outline-secondary mt-3">
                        Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
