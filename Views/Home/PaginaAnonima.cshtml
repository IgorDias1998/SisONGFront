@model SisONGFront.Models.DoacaoAnonimaViewModel

@{
    ViewData["Title"] = "Doação Anônima";
}

<div class="container d-flex justify-content-center align-items-center flex-column" style="min-height: 80vh;">
    <h2 style="color: blue"><i class="bi bi-heart-fill"></i> SisONG</h2>
    <div class="text-center mt-3">
        <div class="alert alert-light border rounded-3 shadow-sm px-4 py-3 w-100 text-center" style="max-width: 500px;">
            <h5 class="mb-0 text-secondary">Quantidade de doações já realizadas</h5>
            <h3 class="text-dark fw-bold mt-2"><h1 class="text-dark fw-bold mt-2">@Model.TotalDoacoes</h1></h3>
        </div>
    </div>

    <div class="card shadow-lg rounded-4 p-4 mb-4" style="width: 100%; max-width: 500px;">
        <h2 class="text-center mb-3 text-primary">Doação Anônima</h2>

        <form asp-action="PaginaAnonima" method="post">
            <div class="mb-3">
                <label asp-for="Doacao.Valor" class="form-label fw-semibold">Valor da Doação (R$)</label>
                <input asp-for="Doacao.Valor" class="form-control rounded-3" type="number" step="0.01" min="0.01" required />
                <span asp-validation-for="Doacao.Valor" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Doacao.Tipo" value="Financeira" />
            <input type="hidden" asp-for="Doacao.Data" value="@DateTime.Now" />

            <button type="submit" class="btn btn-success w-100 rounded-3 shadow-sm mt-3">
                Confirmar Doação
            </button>
        </form>
    </div>

    <div class="text-center mt-3">
        <a asp-controller="Home" asp-action="PublicHome" class="text-decoration-none">Voltar à Página Inicial</a>
    </div>
</div>
